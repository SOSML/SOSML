{
  "name": "sosml-interpreter",
  "version": "1.0.0",
  "description": "An interpreter for Standard ML written in TypeSrcipt.",
  "license": "GPL-3.0",
  "scripts": {
    "citest": "jest --coverage --expand --verbose",
    "cilint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest --notify --watch",
    "build": "webpack --env=dev",
    "dist": "webpack --env=prod"
  },
  "author": "SOSML Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/SOSML/SOSML.git"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.22",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.4",
    "ts-loader": "^2.1.0",
    "tslint": "^5.3.2",
    "typescript": "2.3.4",
    "webpack": "^2.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
